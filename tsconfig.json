{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./",
    "rootDir": "./",
    "moduleResolution": "bundler"
  },
  "include": [
    "index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}